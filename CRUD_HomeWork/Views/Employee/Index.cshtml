@model IEnumerable<CRUD_HomeWork.Models.DBEntity.Employee>

@{
    ViewData["Title"] = "員工列表";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create", "Employee")" class="btn btn-primary">新增員工</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>員工 ID</th>
            <th>員工名稱</th>
            <th>職稱</th>
            <th>聘用日期</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Title</td>
                <td>@employee.HireDate?.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Details", "Employee", new { id = employee.EmployeeId })" class="btn btn-info">查看</a>
                    <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeId })" class="btn btn-warning">編輯</a>
                    <a href="@Url.Action("Delete", "Employee", new { id = employee.EmployeeId })" class="btn btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
